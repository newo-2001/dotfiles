# This is Git's per-user configuration file.
[include]
    path = ~/.gitconfig-user

[core]
    pager = delta
    autocrlf = true
    longpaths = true

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    ls = log --pretty='format:%C(yellow)%h %C(blue)%s %C(white)by %C(green)%an %C(white)%cr'
    fix = commit --amend --no-edit
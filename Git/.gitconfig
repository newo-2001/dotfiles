# This is Git's per-user configuration file.
[include]
    path = ~/.gitconfig-user

[core]
    pager = delta
    longpaths = true
    autocrlf = false
    eol = lf
    editor = nvim

[gpg]
    format = ssh

[commit]
    gpgsign = true

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[init]
    templatedir = ~/.git-templates

[rerere]
    enabled = true

[alias]
    ls = log --pretty='format:%C(bold yellow)%h %C(reset)- %C(bold green)%ar %C(reset)by %C(bold cyan)%an%C(bold yellow)%d%C(reset) %C(white)%s'
    graph = log --graph --all --pretty='format:%C(bold yellow)%h %C(reset)- %C(bold green)%ar %C(reset)by %C(bold cyan)%an%C(bold yellow)%d%C(reset)%n%C(white)%s'
    amend = commit --amend
    fix = commit --amend --no-edit
    yeet = reset HEAD --hard
    pop = reset HEAD~1
    stale = ls ^HEAD origin/HEAD
    forth = ls ^origin/HEAD HEAD
    staged = diff --staged
    unstage = restore --staged

[delta "catppuccin-mocha"]
	blame-palette = "#1e1e2e #181825 #11111b #313244 #45475a"
	commit-decoration-style = "box ul"
	file-decoration-style = "#cdd6f4"
	file-style = "#cdd6f4"
	hunk-header-decoration-style = "box ul"
	hunk-header-file-style = "bold"
	hunk-header-line-number-style = "bold #a6adc8"
	hunk-header-style = "file line-number syntax"
	line-numbers-left-style = "#6c7086"
	line-numbers-minus-style = "bold #f38ba8"
	line-numbers-plus-style = "bold #a6e3a1"
	line-numbers-right-style = "#6c7086"
	line-numbers-zero-style = "#6c7086"
	# 25% red 75% base
	minus-emph-style = "bold syntax #53394c"
	# 10% red 90% base
	minus-style = "syntax #35293b"
	# 25% green 75% base
	plus-emph-style = "bold syntax #40504b"
	# 10% green 90% base
	plus-style = "syntax #2c333a"
	# Should match the name of the bat theme
    syntax-theme = "Catppuccin-mocha"

[delta]
    features = catppuccin-mocha
    navigate = true    # use n and N to move between diff sections
	line-numbers = true
	dark = true
